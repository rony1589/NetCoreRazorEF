@page
@model School.Web.Pages.Subjects.IndexModel

@{
    ViewData["Title"] = "Lista de Materias";
}

<h1>Materias</h1>

<p>
    <a asp-page="Create">Crear Materia</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subjects[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subjects[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subjects[0].Credits)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subjects)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalle de la Materia</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
